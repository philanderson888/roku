<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "RowListItem" extends = "Group" >
  <script type = "text/brightscript" uri="pkg:/components/rowList/rowListItem.brs" />
  <interface > 
    <field id = "itemContent" type = "node" onChange = "showcontent"/>
    <field id = "focusPercent" type = "float" onChange = "showfocus"/>
    <field id = "itemUnfocused" type = "boolean" onChange = "showunfocused" alwaysNotify="true" />
  </interface>
  <children >
    <Rectangle id = "itemRectangle" />   
  </children>
</component>
